################################################################################
# JUMP TO MODERN SHELL IF POSSIBLE
(test_exit_code_127_sdfjsdfksjdhfksjdhf  >/dev/null) 2>/dev/null
if test $? -ne 127; then
  if test -z "$FORMAKE_BASH_REDIRECT"; then
    FORMAKE_BASH_REDIRECTED=1
    export FORMAKE_BASH_REDIRECTED
    if test -x /bin/bash; then
      exec /bin/bash "$0" ${1+"$@"}
    elif test -x /usr/bin/bash; then
      exec /usr/bin/bash "$0" ${1+"$@"}
    elif test -x /usr/local/bin/bash; then
      exec /usr/local/bin/bash "$0" ${1+"$@"}
    else
      (bash -c "pwd" >/dev/null) 2>/dev/null
      if test $? -eq 0; then
        exec bash "$0" ${1+"$@"}
      fi
    fi
  fi
fi
FORMAKE_BASH_REDIRECTED=
export FORMAKE_BASH_REDIRECTED
################################################################################


script_name=`basename $0`
script_dir=`dirname $0`

################################################################################
# LOAD CONFIG
if test -f $script_dir/mk.conf; then
  . $script_dir/mk.conf
fi
if test -f $script_dir/cfront+.conf; then
  . $script_dir/cfront+.conf
fi
################################################################################

print_help() {
cat <<EOF
C++ compiler frontend based on cstem+

$script_name [ld] OPTIONS
  ld       Run in link mode
  -echo    Echo backend command without running it
  *        Any unrecognized options are passed unmodified to a
           backend compiler
EOF
}

case x$1 in
  xld)
    op_ld=1
    shift
    ;;
esac

while test $# -gt 0; do
  case "$1" in
    -h|-help|--help)
      print_help
      exit 0
      ;;
    -echo)
      op_echo=1
      ;;
    *)
      op_params="$op_params $1"
      ;;
  esac
  shift
done

op_params=`echo -n "$op_params" | sed 's/^ *//'`

xstem=cstem+
$xstem -h >/dev/null 2>&1
if test $? -ge 126; then
  if test -f $script_dir/cstem+; then
    xstem=$script_dir/cstem+
  else
    echo "$script_name: error: cstem+ not found" >&2
    exit 1
  fi
fi

if test x$op_ld = x; then
  cc_cmd=`$xstem -cmd -cxxflags`
else
  cc_cmd=`$xstem -cmd -ldflags`
fi

echo "$cc_cmd $op_params"
if test x$op_echo = x; then
  $cc_cmd $op_params
fi

