#!/bin/sh
################################################################################
# Generated by Formake mkmkmf
# Wed Feb 15 07:08:30 EET 2017
# mkmkmf -srcroot ../../ -inst-bin _formake

################################################################################
# BASE CONFIGURATION
BUILDROOT=../..
CONF="build.conf"
MAKEFILE="Makefile"
TOOLS="relpath mkrule"

################################################################################
# INIT
SCRIPT=`basename $0`
PATH=$FORMAKE:$PWD/$BUILDROOT/formake:$PATH
syscap test -f $TOOLS || exit 1
SRCDIR=`dirname $0 | xargs relpath ./`
SRCROOT=`relpath ./ $SRCDIR/$BUILDROOT`
ABS_BUILDDIR=`pwd`
SUBDIR=`relpath $BUILDROOT ./`

################################################################################
# READ CONFIG
. $BUILDROOT/$CONF

################################################################################
# INIT MAKEFILE
mkrule init >$MAKEFILE
mkrule distclean $MAKEFILE >>$MAKEFILE

################################################################################
# CUSTOM CODE
cat <<EOF >>$MAKEFILE
all: formake
formake: _formake $BUILDROOT/$CONF
	cat _formake | sed 's#^share_dir=#share_dir=$DATADIR#' > formake
	chmod +x formake

EOF
mkrule clean formake >>$MAKEFILE

################################################################################
# INSTALLATION FILES
install_bin="formake"
mkrule install bin -srcdir $SRCDIR -d $BINDIR $install_bin >>$MAKEFILE
mkrule install bin -srcdir $SRCDIR -d $DATADIR $install_bin >>$MAKEFILE

################################################################################
# DIST
dist_files="mkmf _formake"
mkrule dist -buildroot $BUILDROOT -srcdir $SRCDIR -f $dist_files >>$MAKEFILE || exit 1

################################################################################
# DONE
echo "$SUBDIR/$SCRIPT: DONE"

