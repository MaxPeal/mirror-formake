#!/bin/sh
################################################################################
# Generated by Formake fmkmf
# Wed Feb 15 06:48:39 EET 2017
# fmkmf -srcroot ../ -subdirs abspath cfront cstem _install ldlshell ldlwrap libro listed fmkconfigure mkdep fmkmf fmkinstall mkrule optool relpath syscap

################################################################################
# BASE CONFIGURATION
BUILDROOT=..
CONF="build.conf"
MAKEFILE="Makefile"
TOOLS="relpath mkrule"
SUBDIRS="abspath cfront cstem _install ldlshell ldlwrap libro listed fmkconfigure mkdep fmkmf fmkinstall mkrule optool relpath syscap"

################################################################################
# INIT
SCRIPT=`basename $0`
PATH=$FORMAKE:$PWD/$BUILDROOT/formake:$PATH
syscap test -f $TOOLS || exit 1
SRCDIR=`dirname $0 | xargs relpath ./`
SRCROOT=`relpath ./ $SRCDIR/$BUILDROOT`
ABS_BUILDDIR=`pwd`
SUBDIR=`relpath $BUILDROOT ./`

################################################################################
# READ CONFIG
. $BUILDROOT/$CONF

################################################################################
# INIT MAKEFILE
mkrule init >$MAKEFILE
mkrule distclean $MAKEFILE >>$MAKEFILE

################################################################################
# CUSTOM CODE

################################################################################
# DIST
dist_files="mkmf "
mkrule dist -buildroot $BUILDROOT -srcdir $SRCDIR -f $dist_files >>$MAKEFILE || exit 1

################################################################################
# SUBDIRS
mkrule subdir -all -install -clean -dist -distclean -d $SUBDIRS >>$MAKEFILE
for dir in $SUBDIRS; do
  cd $ABS_BUILDDIR
  test -d $dir || mkdir -p $dir
  cd $dir; $ABS_BUILDDIR/$SRCDIR/$dir/mkmf || exit 1
done

################################################################################
# DONE
echo "$SUBDIR/$SCRIPT: DONE"

