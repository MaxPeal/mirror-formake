#!/bin/sh
#
# Formake ldlprog
# author: Oleksiy Chernyavskyy <ochern@rocketmail.com>
#

script_name=`basename $0`
script_dir=`dirname $0`
script_options="$@"
orig_dir=`pwd`

################################################################################
# LOAD CONFIG
PATH=$FORMAKE:$PATH
LDLPROG=
if test -f $script_dir/config.rc; then
  . $script_dir/config.rc
fi
test -n "$FORMAKE_LDLPROG" && LDLPROG=$FORMAKE_LDLPROG
if test -n "$LDLPROG" && test -z "$LDLPROG_REDIRECT"; then
  export LDLPROG_REDIRECT=1
  $LDLPROG "$@"
  ret=$?
  if test $ret -ne 64; then
    exit $ret
  fi
fi
################################################################################

print_help() {
  cat <<EOF
Create program wrapper script with predefined LD library path variable

$script_name [OPTIONS] program
 -L<PATH>       add library path to the LD library search path
 -*             any unrecognized options are ignored
Last option is taken as a program parameter
EOF
}

abs_path() {
  _sub_orig_dir=`pwd`
  if test $# = 0; then
    abs_path_ret=
    return
  fi
  if test $# = 2; then
    _arg_orig_dir=$1
    _arg=$2
    if echo -n "$_arg" | grep "^/" > /dev/null; then
      :
    else
      _arg=`echo -n "$_arg_orig_dir/$_arg" | sed 's!//*!/!g'`
    fi
  else
    _arg=$1
  fi
  if test -e "$_arg"; then
    if test -d $_arg; then
      _file=
    else
      _file=`basename -- $_arg`
      _arg=`dirname -- $_arg`
    fi

    cd $_cd_param $_arg
    abs_path_ret=`pwd`
    if test x"$_file" != "x"; then
      abs_path_ret="$abs_path_ret/$_file"
    fi

    cd $_cd_param $_sub_orig_dir
  else
    if echo -n "$_arg" | grep "^/" > /dev/null; then
      abs_path_ret="$_arg"
    else
      abs_path_ret="$_sub_orig_dir/$_arg"
    fi
    abs_path_ret=`echo -n "$abs_path_ret" | sed 's#//*#/#g'`
    abs_path_ret=`echo -n "$abs_path_ret" | sed 's#/*$#/#'`
    string_prev=
    while test "x$abs_path_ret" != "x$string_prev" ; do
      string_prev=$abs_path_ret
      abs_path_ret=`echo -n "$abs_path_ret" | sed 's#/[^/][^/][^/][^/]*/\.\./#/#g' | sed 's#/[^/][^/.]/\.\./#/#g' | sed 's#/[^/.][^/]/\.\./#/#g' | sed 's#/[^/.]/\.\./#/#g'`
      abs_path_ret=`echo -n "$abs_path_ret" | sed 's#^/\.\./#/#' | sed 's#^/\.\.$#/#'`
      abs_path_ret=`echo -n "$abs_path_ret" | sed 's#/\./#/#g' | sed 's#/\.$#/#'`
    done
    abs_path_ret=`echo -n "$abs_path_ret" | sed 's#/$##' | sed 's#^$#/#'`
  fi
}


if test $# -eq 0; then
  echo "$script_name: error: no parameters specified" >&2
  exit 1
fi

while test $# -gt 0; do
  op_program=
  case "$1" in
    -help|--help)
      print_help
      exit 0
      ;;
    -L*)
      arg=`echo -n "$1" | sed 's/^-L//'`
      if test -n "$arg"; then
        abs_path "$arg"
        op_lib_path="$op_lib_path:$abs_path_ret"
      fi
      ;;
    -*)
      :
      ;;
    *)
      op_program=$1
      ;;
  esac
  shift
done

if test -z "$op_program"; then
  echo "$script_name: error: program not specified" >&2
  exit 1
fi

op_program_base=`basename "$op_program"`
out_program="$op_program_base-ldlp"

if echo "$op_program" | grep '^/' > /dev/null; then
  abs_path "$op_program"
  op_program=$abs_path_ret
  program_dir=
elif echo "$op_program" | grep '/' > /dev/null; then
  program_dir="\`dirname \$0\`/"
else
  if test -f "$op_program"; then
    program_dir="\`dirname \$0\`/"
  else
    program_dir=
  fi
fi

rm -f $out_program
cat <<EOF >$out_program
#!/bin/sh
################################################################################
# Generated by Formake ldlprog
EOF
date >/dev/null 2>&1
if test $? -eq 0; then
  date | sed 's/^/# /' >>$out_program
fi

cat <<EOF >>$out_program
#
# $script_name $script_options
#

program_dir=$program_dir
target_program=\${program_dir}$op_program
rpath_dirs=$op_lib_path
EOF

cat <<"EOF" >>$out_program
export LD_LIBRARY_PATH=$rpath_dirs:$LD_LIBRARY_PATH
export LIBPATH=$rpath_dirs:$LIBPATH
export SHLIB_PATH=$rpath_dirs:$SHLIB_PATH

if test $# -ne 0; then
  $target_program "$@"
else
  $target_program
fi

EOF

chmod +x $out_program

