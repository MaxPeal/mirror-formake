#!/bin/sh
#
# Formake cfront
# author: Oleksiy Chernyavskyy <ochern@rocketmail.com>
#

script_name=`basename $0`
script_dir=`dirname $0`

################################################################################
# LOAD CONFIG
PATH=$FORMAKE:$PATH
CFRONT=
if test -f $script_dir/config.rc; then
  . $script_dir/config.rc
fi
test -n "$FORMAKE_CFRONT" && CFRONT=$FORMAKE_CFRONT
if test -n "$CFRONT" && test -z "$CFRONT_REDIRECT"; then
  export CFRONT_REDIRECT=1
  $CFRONT "$@"
  ret=$?
  if test $ret -ne 64; then
    exit $ret
  fi
fi
################################################################################

print_help() {
cat <<EOF
C/C++ compiler frontend based on cstem/cstem+

$script_name OPTIONS
  -c++     Force C++ mode [autodetect]
  -echo    Echo backend command without running it
  *        Any unrecognized options are passed unmodified to a
           backend compiler
EOF
}

xstem=cstem
while test $# -gt 0; do
  case $1 in
    -h|-help|--help)
      print_help
      exit 0
      ;;
    -c++)
      xstem=cstem+
      ;;
    -echo)
      op_echo=1
      ;;
    *.C|*.[Cc][Cc]|*.[Cc][Pp][Pp]|*.[Cc][Xx][Xx])
      op_params="$op_params $1"
      xstem=cstem+
      ;;
    *)
      op_params="$op_params $1"
      ;;
  esac
  shift
done

op_params=`echo -n "$op_params" | sed 's/^ *//'`

$xstem -h >/dev/null 2>&1
if test $? -eq 127; then
  if test -f $script_dir/$xstem; then
    xstem=$script_dir/$xstem
  else
    echo "$script_name: error: $xstem not found" >&2
    exit 1
  fi
fi

cc_cmd=`$xstem -cmd -cflags`

echo "$cc_cmd $op_params"
if test x$op_echo = x; then
  $cc_cmd $op_params
fi

